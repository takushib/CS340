@model List<CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Create">Create an Account</a>
    </div>
</div>
<div class="row search">
    <div class="col-md-12">
        <form asp-controller="Account" asp-action="Search">
            <label>Search: <input type="text" name="query" />
            </label>
            <button type="submit" class="btn btn-sm btn-primary">Search</button>
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>Customer Id</th>
        <th>Email Address</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Reward Balance</th>
        <th></th>
    </tr>
    @foreach (var result in Model)
    {
        <tr>
            <td>@result.CustomerId</td>
            <td>@result.EmailAddress</td>
            <td>@result.FirstName</td>
            <td>@result.LastName</td>
            <td>@result.PhoneNumber</td>
            <td>@result.RewardBalance </td>
            <td>
                <a class="btn btn-warning btn-sm"                 
                    asp-controller="Account" 
                    asp-action="Edit"
                    asp-route-id="@result.CustomerId">Edit</a>

                <form asp-controller="Account" asp-action="Delete" asp-route-id="@result.CustomerId" method="post">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

