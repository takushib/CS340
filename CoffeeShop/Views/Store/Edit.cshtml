@model StoreViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-6 col-md-offset-1">
        <h1>Update Store</h1>
        <div class="form-container">
            <form asp-controller="Store" asp-action="Edit" method="post">
                <input type="hidden" asp-for="StoreId" />
                <p class="message">Please update your store:</p>  
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Street">Street</label>
                    <input class="form-control" asp-for="Street" />
                    <span asp-validation-for="Street"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City">City</label>
                    <input class="form-control" asp-for="City" />
                    <span asp-validation-for="City"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State">State</label>
                    <input class="form-control" asp-for="State" />
                    <span asp-validation-for="State"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zip">Zip</label>
                    <input class="form-control" asp-for="Zip" />
                    <span asp-validation-for="Zip"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input class="form-control" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}