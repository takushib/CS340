@model List<CustomerFavoriteViewModel>

@{
    ViewData["Title"] = "Favorites";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <a class="btn btn-primary" asp-controller="Favorites" asp-action="Add">Add to Favorites</a>
    </div>
</div>

<div class="row search">
    <div class="col-md-12">
        <form asp-controller="Favorites" asp-action="Search">
            <label>Search: <input type="text" name="query" />
            </label>
            <button type="submit" class="btn btn-sm btn-primary">Search</button>
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>Customer Name</th>
        <th>Item Name</th>
        <th></th>
    </tr>
    @foreach (var result in Model)
    {
        <tr>
            <td>@result.CustomerName</td>
            <td>@result.ItemName </td>
            <td>
                <form asp-controller="Favorites" asp-action="Delete" asp-route-id="@result.CustomerFavoriteId" method="post">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

