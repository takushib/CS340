@model List<ItemViewModel>

@{
    ViewData["Title"] = "Menu";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <a class="btn btn-primary" asp-controller="Menu" asp-action="Add">Add to Menu</a>
    </div>
</div>
<div class="row search">
    <div class="col-md-12">
        <form asp-controller="Menu" asp-action="Search">
            <label>Search: <input type="text" name="query" />
            </label>
            <button type="submit" class="btn btn-sm btn-primary">Search</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
<table class="table">
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var result in Model)
    {
        <tr>
            <td>@result.Name</td>
            <td>@result.Type</td>
            <td>@result.Price</td>
            <td>
            <a class="btn btn-warning btn-sm"                 
                    asp-controller="Menu" 
                    asp-action="Edit"
                    asp-route-id="@result.ItemId">Edit</a>

                <form asp-controller="Menu" asp-action="Delete" asp-route-id="@result.ItemId" method="post">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
        </td>
        </tr>   
    }
</table>
</div>
</div>

