@model OrderItemViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="create">
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-6 col-md-offset-1">
            <h1>Add Item to Order</h1>
            <div class="form-container">
                <form asp-controller="OrderItem" asp-action="Create" method="post">
                    <input type="hidden" asp-for="OrderId" />

                    <p class="message">Please choose a menu item and quantity:</p>  
                    <h2>Choose Menu Item</h2>
                    <div class="form-group">
                        <select asp-for="ItemId">
                        @foreach (var item in Model.AllItems)
                        {
                            <option value="@item.ItemId">@item.Name (@item.Price)</option>
                        }
                        </select>
                    </div>

                    <h2>Choose Quantity</h2>
                    <div class="form-group">
                        <label asp-for="Quantity">Quantity</label>
                        <input class="form-control" asp-for="Quantity" />
                        <span asp-validation-for="Quantity"></span>
                    </div>
                    <!-- <div class="form-group">
                        <label asp-for="RewardUsed">Reward Used</label>
                        <input class="form-control" asp-for="RewardUsed" />
                        <span asp-validation-for="RewardUsed"></span>
                    </div> -->
                    <button type="submit" class="btn btn-primary" name="nextStep" value="AddAnother">Add Another Item</button>
                    <button type="submit" class="btn btn-primary" name="nextStep" value="Confirm">Confirm Your Order</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}